{% import . "github.com/vincenscotti/impero/model" %}

{% func CompaniesPage(p *CompaniesData) %}

{%= GameHeaderPage(p.HeaderData) %}

<table>
<tr>
	<th>#</th>
	<th>Nome</th>
	<th>Capitale sociale</th>
	<th>Rendimento</th>
</tr>

{% for i, cmp := range p.Companies %}
<tr>
	<td>{%d i+1 %}</i>
	<td><a href="/game/company/{%d int(cmp.ID) %}">{%s cmp.Name %}</a></td>
	<td>{%d cmp.ShareCapital %}</td>
	<td>{%d cmp.Income %}</td>
</tr>
{% endfor %}

</table>

{%= FooterPage() %}

{% endfunc %}
